<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Add Mantenimiento</title>
	<link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card border-secondary"> 
    	<div class="card-header">
			Aprobar Mantenimiento
		</div>
        <div class="card-body">
            <form action="/mantenimiento/estadoDoctor/<%= idmantenimiento %>" method="post">
                <div class="form-group">
                    <select class="custom-select"  name="estadoD">
                      <option selected="">Seleccione un estado</option>
                      <option value="Aprobado">Aprobado</option>
                      <option value="Rechazado">Rechazado</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Aceptar"/>
                </div>
            </form>
        </div>
                
    </div>
</body>
</html>
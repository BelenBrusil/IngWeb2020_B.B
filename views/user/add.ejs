<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Add user</title>
	<link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card border-secondary"> 
    	<div class="card-header">
			Add Book
		</div>
        <div class="card-body">
            <form action="/user/add" method="post">
                <div class="form-group">
                    <label>Nombres:</label>
                    <input type="text" class="form-control" name="nombres" value="<%= nombres %>"autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Usuario:</label>
                    <input type="text" class="form-control" name="usuario" value="<%= usuario %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="text" class="form-control" name="password" value="<%= password %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Cargo:</label>
                    <select class="custom-select" name="cargo" >
                        <option value="">Seleccione un cargo:</option>
                        <% for(var i = 0; i< data.length; i++) { %>
                            <option value="<%= data[i].idcargos%>"><%= data[i].nombre%></option>
                        <% } %>
                      </select>
                      <br>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Add doctor</title>
	<link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card border-secondary"> 
    	<div class="card-header">
			Add doctor
		</div>
        <div class="card-body">
            <form action="/doctorA/add" method="post">
                <div class="form-group">
                    <label>Nombre:</label>
                    <input type="text" class="form-control" name="nombredoctor" value="<%= nombredoctor %>"autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="text" class="form-control" name="passworddoctor" value="<%= passworddoctor %>"autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Hospital:</label>
                    <select class="custom-select" name="idhospitaldoctor" >
                        <option value="">Seleccione un hospital:</option>
                        <% for(var i = 0; i< datahos.length; i++) { %>
                            <option value="<%= datahos[i].idhospital%>"><%= datahos[i].nombrehos%></option>
                        <% } %>
                      </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
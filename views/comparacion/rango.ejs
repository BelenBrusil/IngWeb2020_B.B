<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Asignar</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card border-secondary"> 
    	<div class="card-header">
			Comparar Tecnicos
		</div>
        <div class="card-body">
            <form action="/comparacion/resultadorango" method="post">
                <div class="form-group">
                    <label>Categoria:</label>
                    <select class="custom-select"  name="categoria" required>
                      <option value="">Seleccione una categoria</option>
                      <option value="presentacion">Presentacion</option>
                      <option value="conocimiento">Conocimiento</option>
                      <option value="puntualidad">Puntualidad</option>
                      <option value="comunicacion">Comunicacion</option>
                      <option value="amabilidad">Amabilidad</option>
                      <option value="calificacionTotal">Calificacion Total</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Maximo:</label>
                    <input type="text" class="form-control" name="maximo" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <label>Minimo:</label>
                    <input type="text" class="form-control" name="minimo" autocomplete="off" required>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Ver resultados"/>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Lista de tecnicos!</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card"> 
        <div class="card-body">
            <form action="/comparacion/compararC" method="post">
                <div class="form-group">
                    <label>Categoria:</label>
                    <select class="custom-select"  name="categoria" required>
                      <option value="">Seleccione una categoria</option>
                      <option value="presentacion">Presentacion</option>
                      <option value="conocimiento">Conocimiento</option>
                      <option value="puntualidad">Puntualidad</option>
                      <option value="comunicacion">Comunicacion</option>
                      <option value="amabilidad">Amabilidad</option>
                      <option value="calificacionTotal">Calificacion Total</option>
                    </select>
                </div>
                <div class="form-group">
                    <table class=" table">
                        <thead class = "table-secondary">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tecnico</th>
                                <th scope="col">Presentacion</th>
                                <th scope="col">Conocimiento</th>
                                <th scope="col">Puntualidad</th>
                                <th scope="col">Amabilidad </th>
                                <th scope="col">Comunicacion </th>
                                <th scope="col">Total </th>
                            </tr>
                        </thead>
                        <tbody>
                        <% for(var i = 0; i< matrizT.length; i++) { %>
                            <tr>
                                <th scope="row"><%= (i+1) %></th>
                                <td><%= matrizT[i][0]%></td>
                                <td><%= matrizT[i][1]%></td>
                                <td><%= matrizT[i][2]%></td>
                                <td><%= matrizT[i][3]%></td>
                                <td><%= matrizT[i][4]%></td>
                                <td><%= matrizT[i][5]%></td>
                                <td><%= matrizT[i][6]%></td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Comparar"/>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Lista de tecnicos!</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a class="nav-link">Resultados Comparacion</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/comparacion/rango">Nueva Comparacion</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        <h4> Categoria : <%= categoria %></h4>
        <table class=" table">
            <thead class = "table-secondary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tecnico</th>
                    <th scope="col">Calificacion</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< matrizR.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= matrizR[i][0]%></td>
                    <td><%= matrizR[i][1]%></td>
                </tr>
            <% } %>
            </tbody>
        </table>

            <%if(matrizR.length === 0 ) { %>
                <h5> No hay tecnicos que cumplan con los requisitos </h5>
            <% } %>
        </div>
    </div>

</body>
</html>